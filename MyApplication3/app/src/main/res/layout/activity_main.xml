<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="100dp"
        app:layout_goneMarginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end">

        <EditText
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextView1"
            android:ems="10"
            android:text="0"
            android:textSize="40dp"
            android:gravity="right|center"
            app:layout_constraintTop_toTopOf="@+id/btnPlusMinus"
            android:inputType="textPersonName"
            android:background="@color/white"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="192dp">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="%"
                android:background="#72bcd4"
                android:layout_margin="1dp"
                android:onClick="percentageEvent"
                android:textColor="@color/white"
                android:textSize="15dp"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:text="âˆš"
                android:background="#72bcd4"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                >

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlusMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+/-"
                android:background="#72bcd4"
                android:onClick="numberEvent"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                >
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <TableRow
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="numberEvent"
            >


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="7"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="8"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="9"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operandOperator"
                android:text="*"
                android:layout_margin="1dp"
                android:background="#0060be"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:text="4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnFour"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnFive"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnSix"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="-"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="operandOperator"
                android:id="@+id/btnMinus"
                android:background="#bc3a3a"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:text="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnOne"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnTwo"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnThree"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="+"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="operandOperator"
                android:id="@+id/btnPlus"
                android:layout_margin="1dp"
                android:background="#0060be"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:text="C"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="clearEvent"
                android:id="@+id/btnClear"
                android:layout_margin="1dp"
                android:background="#00018b"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnZero"
                android:background="#7cfc00"
                android:layout_margin="1dp"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:id="@+id/btnDot"
                android:layout_margin="1dp"
                android:background="#00018b"
                android:textColor="@color/white"
                android:textSize="25dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="/"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="operandOperator"
                android:id="@+id/btnDivide"
                android:background="#bc3a3a"
                android:textColor="@color/white"
                android:textSize="25dp"
                >


            </androidx.appcompat.widget.AppCompatButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="equalEvent"
                android:text="="
                android:layout_margin="1dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:background="#72bcd4">

            </androidx.appcompat.widget.AppCompatButton>



        </TableRow>
    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>